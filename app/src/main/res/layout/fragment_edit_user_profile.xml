            android:gravity="center_vertical">

            <!-- ImageView -->
            <ImageView
                android:id="@+id/ivEditEmail"
                android:layout_width="20dp"
                android:layout_height="15dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/email2"
                android:contentDescription="@string/edit_email" />

            <!-- LinearLayout for Texts -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <!-- TextView with Title -->
                <TextView
                    android:id="@+id/tvEmailAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/email_address"
                    android:textColor="@color/black"
                    android:fontFamily="@font/plus_jakarta_sans_bold"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <!-- TextView for Email -->
                <TextView
                    android:id="@+id/tvEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ayustinasamudin22006@gmail.com"
                    android:textColor="@color/black"
                    android:fontFamily="@font/plus_jakarta_sans"
                    android:textSize="14sp" />

            </LinearLayout>

            <!-- Icon > -->
            <ImageView
                android:id="@+id/ivzpanah2"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/panah"
                android:contentDescription="@string/more_options" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>


