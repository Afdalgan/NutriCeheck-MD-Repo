<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <!-- Bagian Header -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingBottom="1dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_back"
            android:background="@android:color/transparent"
            android:contentDescription="@string/back_button" />

        <TextView
            android:id="@+id/tvHeader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/edit_user_profile"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:fontFamily="@font/plus_jakarta_sans_bold"
            android:gravity="center" />
    </LinearLayout>

    <!-- Gambar Profil -->

        <ImageView
            android:id="@+id/profileUser"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/bg_circle"
            android:layout_gravity="center"
            tools:ignore="ContentDescription"/>


    <!-- CardView for Edit Username Section -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        app:strokeColor="@color/prymary_color"
        app:strokeWidth="2dp">

        <!-- LinearLayout to hold ImageView and TextView -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:gravity="center_vertical">

            <!-- ImageView -->
            <ImageView
                android:id="@+id/ivEditUsername"
                android:layout_width="20dp"
                android:layout_height="15dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/user"
                android:contentDescription="@string/edit_username" />

            <!-- LinearLayout for Texts -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <!-- TextView with Title -->
                <TextView
                    android:id="@+id/tvEditProfileTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/username"
                    android:textColor="@color/black"
                    android:fontFamily="@font/plus_jakarta_sans_bold"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <!-- TextView for Username -->
                <TextView
                    android:id="@+id/tvUsername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ayustina"
                    android:textColor="@color/black"
                    android:fontFamily="@font/plus_jakarta_sans"
                    android:textSize="14sp" />

            </LinearLayout>
            <!-- Icon > -->
            <ImageView
                android:id="@+id/ivpanah1"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/panah"
                android:contentDescription="@string/more_options" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- CardView for Edit Email Section -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
